{
  "name": "@plugandwork/example-app",
  "version": "1.1.0",
  "description": "",
  "author": "plugandwork",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.jsx",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "NODE_ENV=production microbundle-crl -no-compress --css-modules false --format modern,cjs",
    "start": "microbundle-crl watch -no-compress --css-modules false --format modern,cjs",
    "dev": "NODE_ENV=development PORT=3001 REACT_APP_PAW_HOST=http://localhost:3000 react-scripts start",
    "test": "run-s test:unit test:build",
    "build:tailwind": "npx tailwindcss build -i src/index.css -o src/index.build.css",
    "test:build": "run-s build",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "prestart": "npm run build:tailwind",
    "prebuild": "npm run build:tailwind",
    "postbuild": "cp -r src/assets dist/assets && mv src/index.build.css dist/index.css"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*",
    "react-is": "*",
    "@plugandwork/core-ui": "*",
    "tailwindcss": "*"
  },
  "devDependencies": {
    "@plugandwork/core-ui": "^0.3.11",
    "@types/react": "^16.14.0",
    "@types/react-dom": "^16.9.13",
    "@types/react-router-dom": "^5.1.7",
    "autoprefixer": "^10.4.0",
    "bson-objectid": "^2.0.1",
    "cross-env": "^7.0.2",
    "lodash": "^4.17.21",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "^2.0.4",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "5.0.0",
    "tailwindcss": "^3.0.7"
  },
  "files": [
    "dist"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
